<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="CropWindowTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorBackground">#4c000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:dialogTheme">@style/AccentColorDialog</item>
        <item name="android:alertDialogTheme">@style/AccentColorAlertDialog</item>
        <item name="android:colorPrimary">#00000000</item>
        <item name="android:colorPrimaryDark">#00000000</item>
    </style>
    <style name="AccentColorDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog" />
    <style name="AccentColorAlertDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog" />
    <style name="CoverAppBase" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="CoverApp" parent="@style/CoverAppBase" />
</resources>
