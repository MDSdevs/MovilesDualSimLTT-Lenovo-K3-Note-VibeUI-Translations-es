<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EffectOfScreen" />
    <style name="EffectOfScreen.TextAppearance" parent="@style/EffectOfScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EffectOfScreen.TextAppearance.Title" parent="@style/EffectOfScreen.TextAppearance">
        <item name="android:textSize">@dimen/display_effect_text_size_title</item>
        <item name="android:textColor">@color/display_effect_text_color_title</item>
    </style>
    <style name="EffectOfScreen.TextAppearance.Summary" parent="@style/EffectOfScreen.TextAppearance">
        <item name="android:textSize">@dimen/display_effect_text_size_summary</item>
        <item name="android:textColor">@color/display_effect_text_color_summary</item>
    </style>
    <style name="EffectOfScreen.Operator" parent="@style/EffectOfScreen">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="EffectOfScreen.SeekBar" parent="@style/EffectOfScreen">
        <item name="android:paddingLeft">@dimen/display_effect_space_medium</item>
        <item name="android:paddingRight">@dimen/display_effect_space_medium</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/display_effect_param_bar_layer_height</item>
        <item name="android:minHeight">@dimen/display_effect_param_bar_layer_height</item>
        <item name="android:thumb">@drawable/lenovo_effect_of_screen_param_bar_thumb</item>
        <item name="android:thumbOffset">@dimen/display_effect_space_medium</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="app_ColorAcitonbarTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="app_ColorAcitonbarSubtitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
    <style name="app_ColorActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">?android:colorPrimary</item>
    </style>
    <style name="AppTheme_ColorActionbar" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar" />
</resources>
