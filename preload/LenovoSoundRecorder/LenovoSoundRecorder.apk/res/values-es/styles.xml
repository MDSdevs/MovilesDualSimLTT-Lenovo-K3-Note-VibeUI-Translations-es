<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppCompat.DrawerArrowToggle" parent="">
        <item name="color">?android:colorControlNormal</item>
        <item name="spinBars">true</item>
        <item name="drawableSize">24.0dip</item>
        <item name="gapBetweenBars">3.0dip</item>
        <item name="arrowHeadLength">8.0dip</item>
        <item name="arrowShaftLength">16.0dip</item>
        <item name="barLength">18.0dip</item>
        <item name="thickness">2.0dip</item>
    </style>
    <style name="Widget.Design.FloatingActionButton" parent="@android:style/Widget">
        <item name="android:background">@drawable/leac_design_fab_background</item>
        <item name="android:elevation">@dimen/leac_design_fab_elevation</item>
        <item name="android:backgroundTint">?android:colorAccent</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
        <item name="fabSize">normal</item>
        <item name="pressedTranslationZ">@dimen/leac_design_fab_translation_z_pressed</item>
        <item name="borderWidth">@dimen/leac_design_fab_border_width</item>
    </style>
    <style name="Widget.Design.ScrimInsetsFrameLayout" parent="">
        <item name="insetForeground">#44000000</item>
    </style>
    <style name="Widget.Design.NavigationView" parent="">
        <item name="android:background">?android:windowBackground</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:maxWidth">@dimen/leac_design_navigation_max_width</item>
        <item name="android:elevation">@dimen/leac_design_navigation_elevation</item>
    </style>
    <style name="Widget.Design.TabLayout" parent="@style/Base.Widget.Design.TabLayout">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">4.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
    <style name="Base.Widget.Design.TabLayout" parent="@android:style/Widget">
        <item name="tabIndicatorHeight">2.0dip</item>
        <item name="tabBackground">?android:selectableItemBackground</item>
        <item name="tabMaxWidth">@dimen/leac_design_tab_max_width</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabPaddingStart">12.0dip</item>
        <item name="tabPaddingEnd">12.0dip</item>
    </style>
    <style name="TextAppearance.Design.Tab" parent="@android:style/TextAppearance.Material.Button">
        <item name="android:textSize">@dimen/leac_design_tab_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Widget.Design.TextInputLayout" parent="@android:style/Widget">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    </style>
    <style name="TextAppearance.Design.Hint" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">?android:colorControlActivated</item>
    </style>
    <style name="TextAppearance.Design.Error" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">@color/leac_design_textinput_error_color</item>
    </style>
    <style name="TextAppearance.Design.Counter" parent="@android:style/TextAppearance.Material.Caption" />
    <style name="TextAppearance.Design.Counter.Overflow" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">@color/leac_design_textinput_error_color</item>
    </style>
    <style name="TextAppearance.Design.Snackbar.Message" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/leac_design_snackbar_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Widget.Design.Snackbar" parent="@android:style/Widget">
        <item name="android:theme">@android:style/Theme.DeviceDefault</item>
        <item name="android:background">@drawable/leac_design_snackbar_background</item>
        <item name="android:paddingLeft">@dimen/leac_design_snackbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/leac_design_snackbar_padding_horizontal</item>
        <item name="android:maxWidth">@dimen/leac_design_snackbar_max_width</item>
        <item name="android:minWidth">@dimen/leac_design_snackbar_min_width</item>
        <item name="android:elevation">@dimen/leac_design_snackbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/leac_design_snackbar_action_inline_max_width</item>
    </style>
    <style name="Widget.Design.CollapsingToolbar" parent="@android:style/Widget">
        <item name="expandedTitleMargin">32.0dip</item>
        <item name="statusBarScrim">?android:colorPrimaryDark</item>
    </style>
    <style name="Widget.Design.AppBarLayout" parent="@android:style/Widget">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">@dimen/leac_design_appbar_elevation</item>
    </style>
    <style name="Widget.Design.CoordinatorLayout" parent="@android:style/Widget">
        <item name="statusBarBackground">?android:colorPrimaryDark</item>
    </style>
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="@android:style/TextAppearance.Material.Display1">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="CardView.Dark" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="Theme.SoundRecorder" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarTabTextStyle">@style/titleTextColor</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="titleTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="MediaButton" parent="@android:style/MediaButton">
        <item name="android:background">@android:drawable/btn_default</item>
    </style>
    <style name="layoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="phoneListMenu">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="groupTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="phoneGroupTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="fileNameTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="phoneFileNameTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="fileLengthAndRecordTime" parent="@style/layoutWrapContent">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/file_length_and_record_time</item>
    </style>
    <style name="phoneFileLengthAndRecordTime" parent="@style/layoutWrapContent">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/file_length_and_record_time</item>
    </style>
    <style name="layoutDropMenu" parent="@style/layoutWrapContent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="recorderListTitle">
        <item name="android:paddingTop">@dimen/title_padding_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">76.0dip</item>
    </style>
    <style name="subpage_title_text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/record_blue</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:marqueeRepeatLimit">1</item>
    </style>
    <style name="line75">
        <item name="android:background">#ff757575</item>
    </style>
    <style name="Theme.ShareDialog" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
