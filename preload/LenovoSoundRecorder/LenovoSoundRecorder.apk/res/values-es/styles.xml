<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="Theme.SoundRecorder" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarTabTextStyle">@style/titleTextColor</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="titleTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="MediaButton" parent="@android:style/MediaButton">
        <item name="android:background">@android:drawable/btn_default</item>
    </style>
    <style name="layoutWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="phoneListMenu">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="groupTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="phoneGroupTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="fileNameTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="phoneFileNameTextView" parent="@style/layoutWrapContent">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/file_name_color</item>
    </style>
    <style name="fileLengthAndRecordTime" parent="@style/layoutWrapContent">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/file_length_and_record_time</item>
    </style>
    <style name="phoneFileLengthAndRecordTime" parent="@style/layoutWrapContent">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/file_length_and_record_time</item>
    </style>
    <style name="layoutDropMenu" parent="@style/layoutWrapContent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="recorderListTitle">
        <item name="android:paddingTop">@dimen/title_padding_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">76.0dip</item>
    </style>
    <style name="subpage_title_text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/record_blue</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:marqueeRepeatLimit">1</item>
    </style>
    <style name="line75">
        <item name="android:background">#ff757575</item>
    </style>
    <style name="Theme.ShareDialog" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="NonFullScreenTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:colorPrimary">#ff0097a7</item>
        <item name="android:colorPrimaryDark">#ff0097a7</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid">
        <item name="android:displayOptions">none</item>
    </style>
    <style name="SeekBarBarckground" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:colorAccent">#ff0097a7</item>
    </style>
</resources>
