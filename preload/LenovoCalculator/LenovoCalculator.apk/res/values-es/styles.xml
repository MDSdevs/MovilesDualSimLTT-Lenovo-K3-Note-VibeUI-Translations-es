<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowColor">@color/not_see_color</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="changemode_button_style_land">
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="digit_button_port_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_bg</item>
        <item name="android:layout_margin">10.0dip</item>
    </style>
    <style name="digit_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_bg</item>
    </style>
    <style name="operator_button_port_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_bg</item>
        <item name="android:layout_margin">5.0dip</item>
    </style>
    <style name="operator_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_bg</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="equal_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/digit_bg</item>
    </style>
    <style name="display_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">right</item>
        <item name="android:background">#00000000</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minLines">3</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:paddingStart">2.0dip</item>
        <item name="android:paddingEnd">2.0dip</item>
    </style>
    <style name="display_land_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">right</item>
        <item name="android:background">#00000000</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minLines">3</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>
    <style name="history_port_display_style">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center|right|top</item>
        <item name="android:background">#00000000</item>
        <item name="android:focusable">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minLines">8</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:editable">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textCursorDrawable">@color/cursor_color</item>
    </style>
    <style name="history_land_display_style">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center|right|top</item>
        <item name="android:background">#00000000</item>
        <item name="android:focusable">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minLines">5</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:editable">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>
    <style name="winbg_NoTitleBar" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
    <style name="winbg_trans" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:colorPrimary">#ffcfd8dc</item>
        <item name="android:colorPrimaryDark">#ffcfd8dc</item>
    </style>
</resources>
