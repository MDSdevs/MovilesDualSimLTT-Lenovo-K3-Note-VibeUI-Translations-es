<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="ListItemTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textColor">@color/color_title_text_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ListItemSummaryTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/list_item_summary_text_size</item>
        <item name="android:textColor">#99191919</item>
        <item name="android:maxLines">4</item>
    </style>
    <style name="app_ColorAcitonbarTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="app_ColorAcitonbarSubtitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
    <style name="app_ColorActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar" />
</resources>
