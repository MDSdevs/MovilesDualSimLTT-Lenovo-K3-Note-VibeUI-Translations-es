<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrowserTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">false</item>
    </style>
    <style name="NightBrowserTheme" parent="@android:style/Theme.Black">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">false</item>
    </style>
    <style name="message_bar_anims">
        <item name="android:windowEnterAnimation">@anim/message_bar_show_anim</item>
        <item name="android:windowExitAnimation">@anim/message_bar_dissmiss_anim</item>
    </style>
    <style name="message_bar_button" parent="@android:style/Widget.Button" />
</resources>
