<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="TopDivider">
        <item name="android:background">?setup_divider_color</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/divider_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin_bottom</item>
    </style>
    <style name="OobeSetupTitle">
        <item name="android:textSize">@dimen/oobe_setup_title_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Theme.SelectSIM" parent="@android:style/Theme.Holo">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="app_ColorAcitonbarTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="app_ColorAcitonbarSubtitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
    <style name="app_ColorActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:titleTextStyle">@style/app_ColorAcitonbarTitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/app_ColorAcitonbarSubtitleTextStyle</item>
    </style>
    <style name="AppTheme_ColorActionbar" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/app_ColorActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_white</item>
        <item name="android:actionBarTheme">@null</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff1976d2</item>
        <item name="android:colorAccent">@color/actionbar_bg</item>
    </style>
</resources>
