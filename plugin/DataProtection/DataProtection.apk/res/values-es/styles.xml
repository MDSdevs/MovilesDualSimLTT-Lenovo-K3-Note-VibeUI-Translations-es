<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DataProtection" parent="@android:style/Theme.Material.Settings">
        <item name="android:textColorPrimary">@color/textColorMiddle</item>
        <item name="android:textColorSecondary">@color/textColorMiddle</item>
        <item name="android:textColorHint">@color/textColorMiddle</item>
        <item name="android:textColorTertiary">@color/textColorMiddle</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:pathColor">@color/lock_pattern_view_error_color</item>
        <item name="android:regularColor">@color/lock_pattern_view_regular_color</item>
        <item name="android:errorColor">@color/lock_pattern_view_error_color</item>
        <item name="android:successColor">@color/lock_pattern_view_success_color</item>
    </style>
    <style name="PatternButtonStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SecurityPreferenceButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SecurityPreferenceButtonContainer" parent="@android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="Theme.Material.Translucent.NoActionBar" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
